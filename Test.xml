<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite1" parallel="tests" thread-count="2">



    <test name="chrome on windows">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.selenium.SimpleFormDemo"/>
            <class name="com.selenium.DragAndDropSliders"/>
            <class name="com.selenium.InputFormSubmit"/>
        </classes>
    </test>

    <test name="edge on windows">
        <parameter name="browser" value="edge"/>
        <classes>

            <class name="com.selenium.SimpleFormDemo"/>
            <class name="com.selenium.DragAndDropSliders"/>
            <class name="com.selenium.InputFormSubmit"/>
        </classes>
    </test>



</suite>

